<!DOCTYPE html>
<html>

<head>
    {{> ../partials/security }} {{> ../partials/head }}
    <title>Binary Bot</title>
    {{> bundle_css }}
    <link rel="stylesheet" href="css/binary.css">
    {{> bot_css }}
</head>

<body>
    <span id="limits-dialog"></span>
    <span id="integrations-dialog"></span>
    <span id="chart-dialog"></span>
    <span id="trading-view-dialog"></span>
    <span id="logPanel" class="draggable-dialog" data-i18n-title="Log">
      <div id="logTable" class="logTable-scroll"></div>
    </span>
    <span id="summaryPanel" class="draggable-dialog" data-i18n-title="Summary"></span>
    {{> ../partials/loading }}
    <div id="main"></div>
    <div id="blocklyArea"></div>
    <div id="blocklyDiv" style="position: absolute;"></div>
    
    <form id="fileUploadForm" style="display: none;">
        <input data-i18n-title="Open an already saved XML file and retrieve its blocks" type="file" id="files" accept=".xml"
            multiple />
    </form>

    <!-- TODO move to separate component after routes refacotr -->
    <audio id="announcement" autostart="false" preload="auto">
        <source src="sound/announcement.ogg" type="audio/ogg" />
        <source src="sound/announcement.mp3" type="audio/mp3" />
    </audio>
    <audio id="earned-money" autostart="false" preload="auto">
        <source src="sound/coins.ogg" type="audio/ogg" />
        <source src="sound/coins.mp3" type="audio/mp3" />
    </audio>
    <audio id="job-done" autostart="false" preload="auto">
        <source src="sound/job-done.ogg" type="audio/ogg" />
        <source src="sound/job-done.mp3" type="audio/mp3" />
    </audio>
    <audio id="error" autostart="false" preload="auto">
        <source src="sound/out-of-bounds.ogg" type="audio/ogg" />
        <source src="sound/out-of-bounds.mp3" type="audio/mp3" />
    </audio>
    <audio id="severe-error" autostart="false" preload="auto">
        <source src="sound/i-am-being-serious.ogg" type="audio/ogg" />
        <source src="sound/i-am-being-serious.mp3" type="audio/mp3" />
    </audio>
    {{> bundle}} {{> bot}}
    {{> gtm_iframe }}
    <iframe id="localstorage-sync" sandbox="allow-same-origin allow-scripts" style="display: none; visibility: hidden;"></iframe>
    <div class="notifyjs-corner" style="bottom: 0px; right: 0px;"></div>
    <div class="notifyjs-corner" style="bottom: 0px; left: 0px;"></div>
</body>

</html>